{% set rating = rating %}
{% set maximumRating = maximumRating %}
{% set prefix = prefix | default('') %}
{% set suffix = suffix | default('') %}

<div data-component="product-review-read-only-rating">
    {{ prefix }}
    <select data-current-rating="{{ rating }}" disabled>
        <option value="-1">{{ 'product_review.no_reviews' | trans }}</option>
        {% for i in 1..maximumRating %}
            <option value="{{ i }}" >{{ i }}</option>
        {% endfor %}
    </select>
    {{ suffix }}
</div>
