<a name="product-reviews" href="#"></a>
<div class="callout" data-component="product-review-summary">
    {% if _view.hasCustomer %}
        <button class="button info float-right js-button-add-review ">{{ 'product_review.submit.add_a_review' | trans }}</button>
    {% else %}
        <a class="button info float-right" href="{{ path('login') }}">{{ 'product_review.submit.add_a_review' | trans }}</a>
    {% endif %}

    <div>
        <h3>{{ 'product_review.product_ratings' | trans }}</h3>

        {% include '@ProductReviewWidget/index/_partials/summary.twig' with {
            'summary': _view.summary,
            'pagination': _view.pagination,
            'maximumRating': _view.maximumRating
        } %}
    </div>

    {% if _view.summary.totalReview > 0 %}
        <div>
            <h3>{{ 'product_review.product_reviews' | trans }}</h3>

            {% include '@ProductReviewWidget/index/_partials/reviews.twig' with {
                'productReviews': _view.productReviews,
                'pagination': _view.pagination,
                'maximumRating': _view.maximumRating
            } %}
        </div>
    {% endif %}
</div>
